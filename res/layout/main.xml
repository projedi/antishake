<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   >
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
      <TextView
         android:id="@+id/trTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Translate sensitivity: 2"
         />
      <SeekBar
         android:id="@+id/trSeekBar"
         android:progress="20"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         />
   </LinearLayout>
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
      <TextView
         android:id="@+id/rotTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Rotate sensitivity: 2"
         />
      <SeekBar
         android:id="@+id/rotSeekBar"
         android:progress="20"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         />
   </LinearLayout>
   <me.projedi.antishake.RectangleView
       android:id="@+id/rectangleView"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
   />
</LinearLayout>

